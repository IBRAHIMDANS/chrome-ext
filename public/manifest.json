{
  "short_name": "Chrome extension",
  "name": "Chrome extension",
  "icons": {
    "16": "./images/32.png",
    "32": "./images/32.png",
    "64": "./images/64.png",
    "128": "./images/128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "activeTab",
    "background",
    "declarativeContent",
    "https://www.linkedin.com/in/*"
  ],
  "browser_action": {
    "default_icon": "./images/logo192.png",
    "default_popup": "index.html"
  },
  "version": "1.0.0",
  "background": {
    "scripts": ["js/scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/in/*"],
      "js": ["js/scripts/linkedin.js"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
